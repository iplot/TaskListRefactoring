@using DataAccess.Entities
@model IEnumerable<DataAccess.Entities.Category>

@{
    Layout = null;
    List<SelectListItem> list = new List<SelectListItem>();
    foreach (Category category in Model)
    {
        list.Add(new SelectListItem{Text = category.Name, Value = category.CategoryId.ToString()});
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css"/>
</head>
<body>

<div class="container">
    <div id="taskListContainer" class="col-md-6">
    </div>

    <div class="col-md-6">
        <h2>Add new category</h2>
        <div>
            <form name="category" id ="category">
                @Html.TextBox("Name", "", new { required = "" })
                <button class="btn btn-default" type="button" onclick="addCategoryClick()">Add Category</button>
            </form>
        </div>

        <h2>Add new task</h2>
        <div>
            <form name="task" id="task">
                <div class="form-group">
                    <label for="CategoryId">Category</label>
                    @Html.DropDownList("CategoryId", list, "Select an item", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Text">Text</label>
                    @Html.TextBox("Text", "", new { @class = "form-control", required = "" })
                </div>

                <div class="form-group">
                    <label for="Date">Date</label>
                    <input class="form-control" name="Date" id="date" type="date" required="" />
                </div>

                <button class="btn btn-primary" type="button" onclick="addTaskClick()">Add task</button>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/MyScripts/TaskListScripts.js"></script>
<script src="~/Scripts/MyScripts/AdditionForApi.js"></script>

</body>
</html>
